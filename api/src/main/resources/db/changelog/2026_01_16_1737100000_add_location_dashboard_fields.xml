<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="2026_01_16_1737100000_add_location_dashboard_fields" author="mms">
        <comment>Add dashboard configuration fields to location table</comment>
        
        <addColumn tableName="location">
            <column name="dashboard_url" type="VARCHAR(512)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="location">
            <column name="dashboard_config" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>