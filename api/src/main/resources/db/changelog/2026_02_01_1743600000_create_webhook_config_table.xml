<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="openhands" id="2026_02_01_1743600000_create_webhook_config_table">
        <comment>Create webhook_config table for storing Grafana webhook configurations</comment>
        
        <createTable tableName="webhook_config" remarks="Webhook configuration table for storing Grafana webhook API keys and settings">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="company_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="api_key" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="enabled" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Add foreign key constraint to company table -->
        <addForeignKeyConstraint baseColumnNames="company_id"
                                baseTableName="webhook_config"
                                constraintName="fk_webhook_config_company"
                                referencedColumnNames="id"
                                referencedTableName="company"
                                onDelete="CASCADE"/>
        
        <!-- Add indexes for better performance -->
        <createIndex indexName="idx_webhook_config_company" tableName="webhook_config">
            <column name="company_id"/>
        </createIndex>
        
        <createIndex indexName="idx_webhook_config_api_key" tableName="webhook_config">
            <column name="api_key"/>
        </createIndex>
        
        <createIndex indexName="idx_webhook_config_enabled" tableName="webhook_config">
            <column name="enabled"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>