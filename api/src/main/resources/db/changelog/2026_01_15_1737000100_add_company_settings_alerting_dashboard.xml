<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="2026_01_15_1737000100_add_company_settings_alerting_dashboard" author="mms">
        <comment>Add alerting dashboard configuration fields to company_settings table</comment>
        
        <addColumn tableName="company_settings">
            <column name="alerting_dashboard_url" type="VARCHAR(512)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="company_settings">
            <column name="alerting_dashboard_config" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
